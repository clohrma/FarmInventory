<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" styleClass="mainFxmlClass" 
            xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MedicationReportController">
   <stylesheets>
      <URL value="@farmInventory.css" />
   </stylesheets>
   <children>
      <TableView fx:id="tableDisplay" layoutX="160.0" layoutY="55.0" prefHeight="440.0" prefWidth="635.0">
         <columns>
            <TableColumn fx:id="tblColMedName" prefWidth="110.0" text="Name" />
            <TableColumn fx:id="tblColMedAnimalFor" minWidth="5.0" prefWidth="110.0" text="Animal For" />
            <TableColumn fx:id="tblColMedCost" minWidth="5.0" prefWidth="110.0" text="Cost" />
            <TableColumn fx:id="tblColMedDate" prefWidth="110.0" text="Date Purchased" />
            <TableColumn fx:id="tblColMedER" minWidth="5.0" prefWidth="50.0" text="ER" />
            <TableColumn fx:id="tblColMedReason" minWidth="5.0" prefWidth="150.0" text="Reason" />
         </columns>
      </TableView>
      <VBox layoutX="5.0" layoutY="5.0" prefHeight="490.0" prefWidth="155.0" spacing="15.0">
         <children>
            <ComboBox fx:id="comboMedList" onAction="#onActionMedList" prefHeight="30.0" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#onActionAll" prefHeight="30.0" prefWidth="150.0" styleClass="allBtn" text="All" />
            <Button mnemonicParsing="false" onAction="#onAction30Days" prefHeight="30.0" prefWidth="150.0" styleClass="days30Btn" text="30 Days" />
            <Button mnemonicParsing="false" onAction="#onAction90Days" prefHeight="30.0" prefWidth="150.0" styleClass="days90Btn" text="90 Days" />
            <Button mnemonicParsing="false" onAction="#onActionSpring" prefHeight="30.0" prefWidth="150.0" styleClass="springBtn" text="Spring" />
            <Button mnemonicParsing="false" onAction="#onActionSummer" prefHeight="30.0" prefWidth="150.0" styleClass="summerBtn" text="Summer" />
            <Button mnemonicParsing="false" onAction="#onActionFall" prefHeight="30.0" prefWidth="150.0" styleClass="fallBtn" text="Fall" />
            <Button mnemonicParsing="false" onAction="#onActionWinter" prefHeight="30.0" prefWidth="150.0" styleClass="winterBtn" text="Winter" />
            <Button mnemonicParsing="false" onAction="#onActionHome" prefHeight="30.0" prefWidth="150.0" styleClass="homedBtn" text="Hone" />
            <Button mnemonicParsing="false" onAction="#onActionReportsMenu" prefHeight="30.0" prefWidth="150.0" styleClass="reportMenuBtn" text="Reports Menu" />
         </children>
      </VBox>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="160.0" layoutY="5.0" prefHeight="40.0" prefWidth="635.0" styleClass="title" text="Visit Report" />
   </children>
</AnchorPane>
